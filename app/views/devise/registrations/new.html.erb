<section class="vh-100 scrollable form">
  <div class="container py-5 h-100">
    <div class="d-flex align-items-center justify-content-center row h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <%= image_tag "back_signup.svg", class: "d-block mx-lg-auto img-fluid", width: "700", height: "500", loading: "lazy" %>
      </div>
      <div class="form-row col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h1 class="welcome">Your journey starts here!</h1>
        <h2>Signup now</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field sign_attr col-lg-5">
            <%= f.label :avatar %>
            <%= f.file_field :avatar %>
          </div>
          <div class="field sign_attr col-lg-5">
            <%= f.label :email, class: 'h5 mb-1' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
          <div class="fifield sign_attr col-lg-5eld">
            <%= f.label :password, class: 'h5 mb-1' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>
          <div class="field sign_attr col-lg-5">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-lg btn-primary mb-5 mt-4' %>
          </div>
        <% end %>
        <!-- <%= render "devise/shared/links" %> %> -->

      </div>
    </div>
  </div>
</section>
