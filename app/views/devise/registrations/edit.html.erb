<section class="vh-100 scrollable form">
  <div class="container py-5 h-100">
    <div class="d-flex align-items-center justify-content-center row h-100">


          <h2>Edit Profile</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field col-lg-5">
              <%= image_tag(resource.avatar_thumbnail, class: 'avatar_thumbnail') if resource.avatar.attached? %>
            </div>
          <div class="field sign_attr col-lg-5">
            <%= f.file_field :avatar %>
          </div>
          <div class="field sign_attr col-lg-5">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="field sign_attr col-lg-5">
            <%= f.label :password %> <i>(leave blank - no change)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
          <div class="field sign_attr col-lg-5">
            <%= f.label :current_password %> <i>(apply changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit "Update", class: 'btn btn-primary mt-4' %>
            <%= link_to "Back", :back,  class: "btn btn-outlined mt-4"%>
          </div>
        <% end %>

    </div>
  </div>
</section>