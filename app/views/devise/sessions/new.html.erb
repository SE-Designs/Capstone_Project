<section class="vh-100 scrollable form">
  <div class="container py-5 h-100">
    <div class="d-flex align-items-center justify-content-center row h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <%= image_tag "back_login.svg", class: "d-block mx-lg-auto img-fluid", width: "700", height: "500", loading: "lazy" %>
      </div>
      <div class="form-row col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h1 class="welcome">Hello, welcome back.</h1>
        <h2>Login now</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field sign_attr col-lg-5">
              <%= f.label :email, class: 'h5 mb-1' %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="field sign_attr col-lg-5">
              <%= f.label :password, class: 'h5 mb-1' %><br/>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field sign_attr col-lg-5">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class: 'btn btn-lg btn-primary mb-5 mt-4' %>
            </div>
          <% end %>
          <!-- <%= render "devise/shared/links" %> -->

      </div>
    </div>
  </div>
</section>